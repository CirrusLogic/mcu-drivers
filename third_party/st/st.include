ST_LIBRARY = $(BUILD_DIR)/third_party/st/libst.a

ST_CFLAGS = -DUSE_HAL_DRIVER -DSTM32F401xE

ST_INCLUDES = -I$(STM32CUBEF4_PATH)/Drivers/CMSIS/Core/Include
ST_INCLUDES += -I$(STM32CUBEF4_PATH)/Drivers/CMSIS/Device/ST/STM32F4xx/Include
ST_INCLUDES += -I$(STM32CUBEF4_PATH)/Drivers/STM32F4xx_HAL_Driver/Inc

FREERTOS_PATH = $(STM32CUBEF4_PATH)/Middlewares/Third_Party/FreeRTOS/Source
ST_INCLUDES += -I$(FREERTOS_PATH)/CMSIS_RTOS
ST_INCLUDES += -I$(FREERTOS_PATH)/include
ST_INCLUDES += -I$(FREERTOS_PATH)/portable/GCC/ARM_CM4F